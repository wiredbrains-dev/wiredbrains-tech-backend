      "default": "WIRED BRAINS"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "logo_dark": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "footer_tagline": {
      "type": "text"
    },
    "footer_copyright": {
      "type": "string"
    },
    "nav_links": {
      "type": "json"
    },
    "social_twitter": {
      "type": "string"
    },
    "social_linkedin": {
      "type": "string"
    },
    "social_github": {
      "type": "string"
    },
    "social_facebook": {
      "type": "string"
    },
    "social_instagram": {
      "type": "string"
    },
    "contact_email": {
      "type": "email"
    },
    "contact_phone": {
      "type": "string"
    },
    "contact_address": {
      "type": "text"
    }
  }
